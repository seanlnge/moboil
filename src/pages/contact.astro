---
import SiteLayout from "../components/SiteLayout.astro";
import { Button } from "../components/ui/button";
import { ArrowRight } from "lucide-react";
import { FlickeringGrid } from "~/components/aesthetic/flickering-grid";
---

<SiteLayout title="Contact | Moboil" description="Get in touch with Moboil for mobile oil changes in the Tampa area." current="contact">
	<section class="bg-black w-full min-h-[70vh] flex flex-col items-center text-m-white border-m-primary-light relative overflow-hidden">
		<FlickeringGrid
			client:load
			className="z-0 absolute inset-0 size-full w-full h-full"
			squareSize={4}
			gridGap={6}
			color="#888"
			maxOpacity={0.3}
			flickerChance={0.3}
		/>
		<div class="relative z-20 w-full max-w-6xl px-6 md:px-12 lg:px-16 py-24 md:py-28">
			<div class="grid gap-12 lg:grid-cols-[1.1fr_0.9fr] items-start">
				<div class="space-y-6">
					<p class="uppercase tracking-[0.35em] text-xs font-semibold text-orange-400/80">
						Contact
					</p>
					<h1 class="font-header text-4xl md:text-5xl lg:text-6xl font-semibold text-m-white">
						Questions? Let's talk.
					</h1>
					<p class="text-base md:text-lg text-slate-300 leading-relaxed">
						Whether you have questions about the service, need a custom quote, or just want to say hi — reach out below.
					</p>
					<div class="flex flex-col gap-3 sm:flex-row sm:flex-wrap">
						<a href="mailto:contact@moboil.co">
							<Button className="bg-orange-500 text-white tracking-wide font-semibold w-56 hover:bg-orange-400 duration-300">
								Email Us <ArrowRight className="w-4 h-4" />
							</Button>
						</a>
						<a href="/booking">
							<Button className="bg-m-black text-m-white tracking-wide font-semibold w-56 hover:bg-m-primary-white hover:text-m-black duration-300">
								Book Now <ArrowRight className="w-4 h-4" />
							</Button>
						</a>
					</div>
				</div>
				<div class="space-y-4">
					<div class="rounded-3xl border border-slate-800 bg-slate-900 p-6 text-m-white shadow-lg shadow-black/20">
						<p class="uppercase tracking-[0.3em] text-xs font-semibold text-slate-300">
							Email
							<span class="ml-2 inline-flex items-center rounded-full bg-orange-500/20 px-2 py-1 font-header text-[10px] font-semibold uppercase tracking-[0.2em] text-orange-300">
								Primary
							</span>
						</p>
						<div class="mt-4 space-y-3 text-slate-200">
							<a class="text-slate-300 hover:text-m-white transition" href="mailto:contact@moboil.co">
								contact@moboil.co
							</a>
						</div>
					</div>
					<div class="rounded-3xl border border-slate-800 bg-slate-900 p-6 text-m-white shadow-lg shadow-black/20">
						<p class="uppercase tracking-[0.3em] text-xs font-semibold text-slate-300">
							Service Area
						</p>
						<div class="mt-4 space-y-3 text-slate-200">
							<p class="text-slate-300">Tampa, FL & surrounding areas</p>
						</div>
					</div>
					<div class="rounded-3xl border border-slate-800 bg-slate-900 p-6 text-m-white shadow-lg shadow-black/20">
						<p class="uppercase tracking-[0.3em] text-xs font-semibold text-slate-300">
							Pricing
						</p>
						<div class="mt-4 space-y-3 text-slate-200">
							<p class="text-slate-300">$87 flat rate · No hidden fees</p>
						</div>
					</div>
					<div class="rounded-3xl border border-slate-800 bg-slate-900 p-6 text-m-white shadow-lg shadow-black/20">
						<p class="uppercase tracking-[0.3em] text-xs font-semibold text-slate-300">
							Hours
						</p>
						<div class="mt-4 space-y-3 text-slate-200">
							<p class="text-slate-300">Mon - Sat · 8am - 7pm</p>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
</SiteLayout>
