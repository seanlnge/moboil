---
import SiteLayout from "../components/SiteLayout.astro";
import { Button } from "../components/ui/button";
import { ArrowRight, Mail, MapPin, DollarSign, Clock } from "lucide-react";
import { FlickeringGrid } from "~/components/aesthetic/flickering-grid";
---

<SiteLayout title="Contact | Moboil" description="Get in touch with Moboil for mobile oil changes in the Tampa area." current="contact">
	<section class="bg-[url('/media/oil.webp')] bg-cover bg-center w-full min-h-[70vh] flex flex-col items-center text-m-white border-m-primary-light relative overflow-hidden">
		<FlickeringGrid
			client:load
			className="z-0 bg-black/90 absolute inset-0 size-full w-full h-full"
			squareSize={4}
			gridGap={6}
			color="#333"
			maxOpacity={0.3}
			flickerChance={0.3}
		/>
		<div class="relative z-20 w-full max-w-6xl px-6 md:px-12 lg:px-16 py-24 md:py-28">
			<div class="grid gap-12 lg:grid-cols-[1.1fr_0.9fr] items-start">
				<div class="space-y-6">
					<p class="uppercase tracking-[0.35em] text-xs font-semibold text-orange-400/80">
						Contact
					</p>
					<h1 class="font-header text-4xl md:text-5xl lg:text-6xl font-semibold text-m-white">
						Questions? Let's talk.
					</h1>
					<p class="text-base md:text-lg text-slate-300 leading-relaxed">
						Whether you have questions about the service, need a custom quote, or just want to say hi — reach out below.
					</p>
					<div class="flex flex-col gap-3 sm:flex-row sm:flex-wrap">
						<a href="mailto:contact@moboil.co">
							<Button className="bg-orange-500 text-white tracking-wide font-semibold w-56 hover:bg-orange-400 duration-300">
								Email Us <ArrowRight className="w-4 h-4" />
							</Button>
						</a>
						<a href="/booking">
							<Button className="bg-m-black text-m-white tracking-wide font-semibold w-56 hover:bg-m-primary-white hover:text-m-black duration-300">
								Book Now <ArrowRight className="w-4 h-4" />
							</Button>
						</a>
					</div>
				</div>
				<div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-1 lg:pl-12 pt-8 lg:pt-0">
					<!-- Email -->
					<div class="space-y-3">
						<h3 class="flex items-center gap-2 text-xs font-semibold uppercase tracking-[0.2em] text-orange-400/80">
							<Mail className="size-4" /> Email
						</h3>
						<a href="mailto:contact@moboil.co" class="block text-xl text-slate-200 hover:text-white transition-colors font-medium">
							contact@moboil.co
						</a>
					</div>

					<!-- Service Area -->
					<div class="space-y-3">
						<h3 class="flex items-center gap-2 text-xs font-semibold uppercase tracking-[0.2em] text-orange-400/80">
							<MapPin className="size-4" /> Service Area
						</h3>
						<p class="text-xl text-slate-200 font-medium">Tampa, FL & surrounding areas</p>
					</div>

					<!-- Pricing -->
					<div class="space-y-3">
						<h3 class="flex items-center gap-2 text-xs font-semibold uppercase tracking-[0.2em] text-orange-400/80">
							<DollarSign className="size-4" /> Pricing
						</h3>
						<p class="text-xl text-slate-200 font-medium">$87 flat rate · No hidden fees</p>
					</div>

					<!-- Hours -->
					<div class="space-y-3">
						<h3 class="flex items-center gap-2 text-xs font-semibold uppercase tracking-[0.2em] text-orange-400/80">
							<Clock className="size-4" /> Hours
						</h3>
						<p class="text-xl text-slate-200 font-medium">Mon - Sat · 8am - 7pm</p>
					</div>
				</div>
			</div>
		</div>
	</section>
</SiteLayout>
