---
import SiteLayout from "../components/SiteLayout.astro";
import { Button } from "../components/ui/button";
import { ArrowRight } from "lucide-react";
---

<SiteLayout title="Page Not Found | Moboil" description="Page not found.">
	<section class="min-h-[60vh] flex flex-col items-center justify-center text-center px-6 py-24 bg-m-white">
		<h1 class="font-header text-5xl md:text-6xl font-bold text-m-black mb-4">404</h1>
		<p class="text-lg text-slate-500 mb-8">The page you're looking for doesn't exist.</p>
		<a href="/">
			<Button className="bg-orange-500 text-white tracking-wide font-semibold w-56 hover:bg-orange-400 duration-300">
				Go Home <ArrowRight className="w-4 h-4" />
			</Button>
		</a>
	</section>
</SiteLayout>
